# PixelForge Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# APPLICATION
# ===========================================
NEXT_PUBLIC_APP_NAME=PixelForge
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# FILE UPLOAD SETTINGS
# ===========================================
# Maximum file size in bytes (default: 50MB)
MAX_FILE_SIZE=52428800

# Supported file types
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# ===========================================
# PROCESSING SETTINGS
# ===========================================
# Default quality for JPEG output (1-100)
DEFAULT_JPEG_QUALITY=85

# Default compression level for PNG (0-9)
DEFAULT_PNG_COMPRESSION=6

# Default quality for WebP output (1-100)
DEFAULT_WEBP_QUALITY=85

# ===========================================
# STORAGE PATHS
# ===========================================
# Relative to public folder
UPLOAD_DIR=uploads
PROCESSED_DIR=processed

# ===========================================
# CLERK AUTHENTICATION (Required)
# ===========================================
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up

# ===========================================
# DATABASE (Required)
# ===========================================
# MySQL connection string
DATABASE_URL=mysql://root:password@localhost:3306/pixelforge

# ===========================================
# REDIS (Required for Queue)
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# REAL-ESRGAN (Optional - for AI upscaling)
# ===========================================
# Path to Real-ESRGAN binary (default: bin/realesrgan-ncnn-vulkan)
# REALESRGAN_PATH=/path/to/realesrgan-ncnn-vulkan
# GPU ID to use (optional, default: auto)
# REALESRGAN_GPU_ID=0
